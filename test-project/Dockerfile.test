# Test Dockerfile for AI Dev Playbook v2.0 validation
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Create non-root user for security
RUN addgroup -g 1001 -S testuser && \
    adduser -S testuser -u 1001 -G testuser

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies
RUN npm ci --only=dev && \
    npm cache clean --force

# Copy application code
COPY . .

# Create necessary directories with proper permissions
RUN mkdir -p /app/logs /app/test-results && \
    chown -R testuser:testuser /app

# Switch to non-root user
USER testuser

# Expose port for testing
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD node -e "console.log('Container is healthy')" || exit 1

# Default command for testing
CMD ["npm", "test"]
